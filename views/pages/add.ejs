        <form class="add-church-form" action="/new-church" method="post">
          <!-- TODO: remove pink input outlines -->
          <div class="line-break"></div>

          <div class = "form-title">
            <h3><i class="fas fa-church"></i>Add a New Church to the Database</h3>
          </div>

          <p>Lorem ipsum dolor sit amet, sed in eius doctus epicurei, in omittam salutatus sea. Vidit aliquam usu no, et nec dictas expetenda.</p>

          <input type="text" name="name" placeholder="Church Name" required>

          <!-- TODO: decide if want to include default lat/long in tiny p tag under the input boxes since placeholder will disappear and is not copyable -->
          <input type="number" name="longitude" step="0.0000001" placeholder="Longitude (If Unknown Use: 122.9719454)" required>

          <input type="number" name="latitude" placeholder="Latitude (If Unknown Use: 10.8001204)" step="0.0000001" pattern = "^(\-?\d+(\.\d+)?)$" required>

          <input type="text" name="location" pattern = "^(\-?\d+(\.\d+)?)$" placeholder="Location" required>

          <input type="number" name="church_members" placeholder="Number of Adults" required>

          <input type="number" name="sunday_school" placeholder="Number of Children" required>

          <input type="number" name="pre_school" placeholder="Number of Preschool Children" required>

          <input type="number" name="feeding_program" placeholder="Number of Feeding Program Children OR NA" required>
          
          <textarea name="description" placeholder="Church Description" cols="30" rows="5" required></textarea>

          <textarea name="community" placeholder="Community Description" cols="30" rows="5" required></textarea>
          
          <button type="submit">Add to Database</button>
      </form>
