<form class="add-minutes-form" action="/new-minutes" method="post">

  <div class="line-break"></div>

  <div class = "form-title">
    <h3><i class="fas fa-file-alt"></i>Add New Meeting Minutes to the Database</h3>
  </div>

    <p>Lorem ipsum dolor sit amet, sed in eius doctus epicurei, in omittam salutatus sea. Vidit aliquam usu no, et nec dictas expetenda.</p>
  
  <div class="line-break"></div>

  <div>
    <div id="date">
      <label>Date of Meeting: </label>
      <input type="date" name="date" placeholder="MM/DD/YYYY" required>
    </div>
    <div id="time">
      <label>Start Time: </label>
      <input type="text" name="start_time" placeholder="12:00 AM" required>
      <label>End Time: </label>
      <input type="text" name="end_time" placeholder="12:00 AM" required>
    </div>
    <div id="meeting-location">
      <label>Location of Meeting:</label>
      <input type="text" name="venue" placeholder="Name of Venue" required>
      <label>Meeting Host:</label>
      <input type="text" name="meeting_host" placeholder="Name" required>
    </div>
    <div id="other-people">
        <label>Presiding Officer:</label>
        <input type="text" name="presiding_officer" placeholder="Name" required>
        <label>Minutes Recorded By:</label>
        <input type="text" name="minutes_taken_by" placeholder="Name" required>
      </div>
  </div>

  <div class="line-break"></div>

  <h3>Meeting Attendees</h3>

  <div class="line-break"></div>

  <div class="attendees">
    
    <ol id="attendee-list">
      <li><input type="text" name="attendees" placeholder="Attendee Name" required></li>
      <li><input type="text" name="attendees" placeholder="Attendee Name"></li>
      <li><input type="text" name="attendees" placeholder="Attendee Name"></li>
      <li><input type="text" name="attendees" placeholder="Attendee Name"></li>
    </ol>

    <button id="add-attendee"class="add">Add Additional Attendees</button>

  </div>

  <div class="line-break"></div>

  <h3>Introductory Information</h3>

  <div class="line-break"></div>

  <div id="general">
    <div class="general-row">
      <h3>Opening Prayer By:</h3>
      <input type="text" name="opening_prayer_by" placeholder="Name" required>
    </div>
    <div id="sharing">
      <h3>Sharing of God's Word By:</h3>
      <input type="text" name="gods_message_by" placeholder="Name" required>
    </div>
    <div class="announcements">
      <h3>Initial Announcements:</h3>
      <textarea type="text" name="general_notes" placeholder="Notes" cols="30" rows="3" required></textarea>
    </div>
    <div class="announcements">
        <h3>Agenda:</h3>
        <textarea type="text" name="agenda" placeholder="Agenda" cols="30" rows="3" required></textarea>
      </div>
  </div>

  <div class="line-break"></div>

  <h3>Individual Church Reporting</h3>

  <div class="line-break"></div>

  <div id="church-report-container">
    <% churchList.forEach(church => { %>
      <div class="church-report">
        <% if(church.id !== 1) { %>
          <div>

            <h4>Pastor <%=church.pastor_first_name %> <%= church.pastor_last_name %></h4>
            <h6><%= church.name %>, <%= church.location %></h6>

          </div>
          <div class="report">

            <h6>Report:</h6>

            <input type="hidden" name="church_id" value="<%= church.church_id %>" id="<%= church.church_id %>">
            <input type="hidden" name="church_name" value="<%= church.name %>">
            <input type="hidden" name="church_pastor" value="<%=church.pastor_first_name %> <%= church.pastor_last_name %>">
    
            <textarea type="text" name="report" placeholder="Report" cols="30" rows="5" required></textarea>

          </div>
  
          <div class="prayer-requests" id="<%= church.church_id %>">

            <h6>Prayer Requests:</h6>
          
            <ol id="list-prayer-<%= church.church_id %>" >
              <li><input type="text" name="prayer_requests<%= church.church_id %>" placeholder="Prayer Request" required></li>
              <li><input type="text" name="prayer_requests<%= church.church_id %>" placeholder="Prayer Request" required></li>
            </ol>
      
            <button id="prayer-<%= church.church_id %>" class="prayer-add">Add More Prayer Requests</button>
          </div>
        <% } %>
      </div>
    <% }) %>
  </div>

  <div class="line-break"></div>

  <h3>Other Matters</h3>

  <div class="line-break"></div>

  <div id="other-matters">
    <ol id="other-matters-list">
      <li><input type="text" name="other_matters" placeholder="Other Matters" required></li>
      <li><input type="text" name="other_matters" placeholder="Other Matters" ></li>
    </ol>
    <button class="add-more">Add Additional Items</button>
  </div>

  <div class="line-break"></div>
  <h3>Closing</h3>
  <div class="line-break"></div>

  <div id="closing">
    <div>
      <h6>Next Meeting Information</h6>
      <div>
        <label>Date:</label>
        <input id="date-input" type="date" name="next_meeting" placeholder="MM/DD/YYYY" required>
        <label>Time:</label>
        <input type="text" name="next_time" placeholder="12:00 AM" required>
      </div>
      <div>
        <label>Location:</label>
        <input type="text" name="next_location" placeholder="Name of Venue" required>
      </div>
      <div>
          <label>Location Host:</label>
          <input type="text" name="next_location_host" placeholder="Name" required>
      </div>
    </div>
    <div class="line-break"></div>
    <div id="closing-prayer">
      <h3>Closing Prayer By:</h3>
      <input type="text" name="closing_prayer_by" placeholder="Name" required>
    </div>
  </div>
  <div class="line-break"></div>
  <button type="submit">Add to Database</button>
</form>

